{
  "name": "Gift-X",
  "description": "THE BEST BOT IN THE UNIVERSE",
  "logo": "https://files.catbox.moe/60lx1p.jpg",
  "keywords": ["whatsapp", "bot", "gift-md", "baileys", "whatsapp-bot"],
  "repository": "https://github.com/eminentboy11/GIFT-MD",
  "stack": "container",
  
  "addons": [
    {
      "plan": "heroku-postgresql"
    }
  ],
  
  "scripts": {
    "start": "node --expose-gc --max-old-space-size=280 --optimize-for-size --gc-interval=100 index.js"
  },
  
  "env": {
    "SESSION_ID": {
      "description": "Your pairing session ID (must begin with 'Gift-MD:~'). Get it from the pairing site.",
      "value": "",
      "required": true
    },
    "OWNER_NUMBER": {
      "description": "Bot owner's WhatsApp number (with country code, no + or spaces). Example: 2348102487241",
      "value": "",
      "required": true
    },
    "BOT_NAME": {
      "description": "Your bot's display name",
      "value": "GIFT md",
      "required": false
    },
    "PREFIX": {
      "description": "Command prefix (default: .)",
      "value": ".",
      "required": false
    },
    "PACKNAME": {
      "description": "Sticker pack name",
      "value": "GIFT-MD",
      "required": false
    },
    "BOT_OWNER": {
      "description": "Your name/username",
      "value": "eminentboy",
      "required": false
    },
    "MODE": {
      "description": "Bot mode: 'public' or 'private'",
      "value": "public",
      "required": false
    }
  },
  
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "standard-2x"
    }
  },
  
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/DuckyTeam/heroku-buildpack-imagemagick.git"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
    },
    {
      "url": "https://github.com/clhuang/heroku-buildpack-webp-binaries.git"
    }
  ]
}
